
<div class="panel panel-primary">
  <div class="panel-heading">
    <%= 'Log In' %>
  </div>
  <div class='panel-body'>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper: :horizontal_form, html: {autocomplete: "off", class: 'custom-form '} ) do |f| %>
    <div class="form-inputs">
      <%= f.input :username,
      required: false,
      autofocus: true,
      input_html: { autocomplete: "username" } %>
      <%= f.input :password,
      required: false,
      input_html: { autocomplete: "current-password" } %>
      <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-primary submit-button" %>
    </div>
    <% end %>
    <%#= render "devise/shared/links" %>
  </div>
</div>